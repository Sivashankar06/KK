<android.support.v7.widget.CardView
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


            <ImageView
                android:id="@+id/sender_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/sender_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/sender_photo"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/arrow_icon"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/sender_name"
                android:layout_alignParentTop="true"
                android:src="@drawable/arrow_icon"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/receiver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/arrow_icon"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/sender_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/receiver_name"
                android:layout_toRightOf="@+id/sender_photo"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/message_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sender_message"
                android:layout_toRightOf="@+id/sender_photo"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



